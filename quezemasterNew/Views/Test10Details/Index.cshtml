@model quezemasterNew.Models.ViewModel.Test.Test10DetailsViewModel
@{
    ViewData["Title"] = "Index";
}

<style>
    input, button, select, optgroup, textarea {
        margin-top: 1;
        font-family: inherit;
        font-size: inherit;
        line-height: inherit;
        height: 20px;
        width: 20px;
    }
</style>

<div class="container">
    <form asp-action="Tes" asp-controller="Test10Details">
        <div class="row" style="font-weight:16px">
            <div class="col-md-2"></div>
            <div class="col-md-8" style="padding-top:100px">
                <div class="row">
                    <div class="card card-body" style="border:1px solid grey;border-radius:5px">
                        <input type="hidden" asp-for="TestId" />
                        <input type="hidden" asp-for="ConnectionQuestion" />
                        <input type="hidden" asp-for="QuestionId" />
                        <h4 class="text-center">Quiz Name - @Model.QuizName</h4>
                        <hr />

                        <div class="row">
                            <h4>Q. - @Model.QuestionNo</h4>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <h4>@Html.RadioButton("AnswerA", new { @Model.AnswerA }) @Model.AnswerA</h4>
                            </div>
                            <div class="col-md-2"></div>
                            <div class="col-md-4">
                                <h4>@Html.RadioButton("AnswerB", new { @Model.AnswerB })  @Model.AnswerB</h4>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <h4>@Html.RadioButton("AnswerC", new { @Model.AnswerC })  @Model.AnswerC </h4>

                            </div>
                            <div class="col-md-2"></div>
                            <div class="col-md-4">

                                <h4> @Html.RadioButton("AnswerD", new { @Model.AnswerD })  @Model.AnswerD </h4>
                            </div>
                        </div>
                        <br />
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-4"></div>
                            
                                <div class="col-md-4">
                                    <input type="submit" value="Submit" class="btn btn-success" style="width:200px;height:50px"  />
                                </div>
                                
                            
                                <div class="col-md-4">
                                    <input type="submit" value="Next" class="btn btn-primary" style="width:200px;height:50px;background-color:#BC3578;" />
                                </div>


                            <div class="col-md-2"></div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </form>
</div>
