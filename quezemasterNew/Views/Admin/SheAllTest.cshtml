@model IEnumerable<quezemasterNew.Models.ViewModel.Test.AllTestResultViewModel>

@{
    ViewData["Title"] = "SheAllTest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="text-center pt-4 pb-3  fw-bold">All Test</h3>

<table class="table table-bordered">
    @{
        <thead>
            <tr>
                <th>
                    Sr.No
                </th>
                <th>
                    Name
                </th>
                <th>
                    Class
                </th>
                <th>
                    Test Name
                </th>

                <th>
                    Date
                </th>
                <th>
                    Mark
                </th>
            </tr>
        </thead>
        var i = 1;
        <tbody>
            @foreach (var item in Model.OrderByDescending(x=>x.Date))
            {
                <tr>
                    <td>
                        @Html.Label("" + i++.ToString())
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrectAnswer)/20
                    </td>

                </tr>
            }
        </tbody>
    }
</table>
